{
	"name": "what-to-watch",
	"version": "1.0.0",
	"private": true,
	"description": "Личный проект «Что посмотреть» от HTML Academy",
	"scripts": {
		"start": "webpack serve --mode=development --devtool=eval-source-map",
		"dev": "webpack serve --mode=development --devtool=eval-source-map",
		"build": "webpack --mode=production",
		"eslint": "eslint --ext .jsx --ext .js src/ --color --fix",
		"stylelint": "stylelint \"./src/**/*.(css|scss)\" --fix --syntax css scss",
		"test.jest": "jest",
		"test": "npm run eslint && npm run stylelint && npm run test.jest"
	},
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(scss|sass|css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
	"devDependencies": {
		"@babel/core": "^7.14.5",
		"@babel/preset-env": "^7.14.5",
		"@babel/preset-react": "^7.14.5",
		"@wojtekmaj/enzyme-adapter-react-17": "0.6.3",
		"babel-jest": "27.0.6",
		"babel-loader": "^8.2.2",
		"clean-webpack-plugin": "^4.0.0-alpha.0",
		"css-loader": "^5.2.6",
		"enzyme": "3.11.0",
		"eslint": "7.28",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-react": "^7.24.0",
		"file-loader": "6.2.0",
		"html-webpack-plugin": "^5.3.1",
		"jest": "27.0.6",
		"mini-css-extract-plugin": "^1.6.0",
		"react-test-renderer": "17.0.2",
		"sass": "^1.34.1",
		"sass-loader": "^12.1.0",
		"style-loader": "^2.0.0",
		"stylelint": "^13.13.1",
		"stylelint-config-standard": "^22.0.0",
		"stylelint-order": "^4.1.0",
		"stylelint-order-config-standard": "^0.1.3",
		"stylelint-scss": "^3.19.0",
		"url-loader": "4.1.1",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.2",
		"webpack-dev-server": "^3.11.2"
	},
	"dependencies": {
		"react": "17.0.2",
		"react-dom": "^17.0.2"
	}
}
