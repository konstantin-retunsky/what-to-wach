{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"plugins": [
    "react"
  ],
	"extends": [
		"airbnb-base",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"ecmaFeatures": {
      "jsx": true
    }
	},
	"rules": {
		"quotes": "off",
		"indent": "off",
		"no-tabs": "off",
		"space-before-function-paren": "off",
		"comma-dangle": "off",
		"no-unused-vars": "warn",
		"no-multiple-empty-lines": "warn",
		"arrow-body-style": ["error", "always"],
		"import/prefer-default-export": "off"
	}
}
